<Window x:Class="Interface.ConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Преобразователь в шаблонную книгу" Height="300" Width="449" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <ComboBox  x:Name="WorkbookTypesComboBox" HorizontalAlignment="Left" Margin="239,29,0,0" VerticalAlignment="Top" Width="174" Height="25" FontSize="16"/>
        <Button Content="Обработать" HorizontalAlignment="Left" Margin="266,132,0,0" VerticalAlignment="Top" Width="108" Height="32" FontSize="16" Click="Button_Click"/>
        <Label Content="Список книг" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.421,0.115" Width="180" FontSize="16"/>
        <Label Content="Тип книг" HorizontalAlignment="Left" Margin="239,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.421,0.115" Width="180" FontSize="16"/>
        <ListBox  DisplayMemberPath="Name" HorizontalAlignment="Left" Height="218" Margin="10,29,0,0" VerticalAlignment="Top" Width="180" AllowDrop="True" Drop="ListBox_Drop" FontSize="16"/>
        <ComboBox x:Name="WorkbookTypesComboBoxCopy" HorizontalAlignment="Left" Margin="239,68,0,0" VerticalAlignment="Top" Width="174" Height="25" FontSize="16"/>

    </Grid>
</Window>
